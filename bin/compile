#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

BUILD_DIR=$1
CACHE_DIR=$2

APP_DIR="/app"

# mkdir $BUILD_DIR/.heroku/vendor
# cd $BUILD_DIR/.heroku/vendor

curl -s -L "https://raw.github.com/andyisnowskynet/cmake-buildpack-tar/master/cmake-3.4.1-heroku.tar.gz" > $CACHE_DIR/cmake-3.4.1-heroku.tar.gz
tar -xzf $CACHE_DIR/cmake-3.4.1-heroku.tar.gz -C $BUILD_DIR

echo "AWESOME"
echo $PATH
PATH=/app/.heroku/vendor/bin:$PATH
set-env PATH '$HOME/.heroku/vendor/bin:$PATH'

echo "AFTER"
echo $PATH
#curl -O https://github.com/andyisnowskynet/cmake-buildpack-tar/blob/master/cmake-3.4.1-heroku.tar.gz?raw=true
#tar -xvzf cmake-3.4.1-heroku.tar.gz
